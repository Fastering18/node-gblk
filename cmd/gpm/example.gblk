--[[
    fibbonaci rekursive (loop)
]]
lokal fibbonaci = fungsi(a, n) 
    jika n <= 0 maka
        kembali 1;
    jikatidak
        kembali a * fibbonaci(a, n-1);
    tutup
tutup

print(fibbonaci(5, 2)) -- 5 ^ 2


--[[
      piramid (segitiga)
]]
fungsi piramid(r)
    jika r < 3 maka kembali "setidaknya row harus lebih dari 2" tutup
    lokal hasil = ""
    untuk i = 0 ke r lakukan
        hasil = hasil + (" " * (r - i)) + ("* " * (i)) + "\n"
    tutup
    kembali hasil
tutup

print(piramid(20))


