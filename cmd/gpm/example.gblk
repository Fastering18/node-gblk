--[[
    Try catch block
    custom pcall dari lua
]]
fungsi pcall(fn)
    lokal hasil = nil
    lokal berhasil = salah

    coba
        hasil = fn()
        berhasil = benar
    tangkap(err)
        hasil = err
    tutup

    kembali [berhasil, hasil]
tutup

